<section class="post-show-container">
  <article class="post-show-card">
    <% if @post.image.attached? %>
      <%= image_tag(@post.image, class: 'post-image') %>
    <% end %>

    <p>
      <%= @post.description %>
    </p>

    <p>
      <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Sure?"} %>
    </p>

  </article>
</section>

