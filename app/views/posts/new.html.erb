<section class="new-post-form">
  <h1>New Post</h1>

  <%= form_for(@post)  do |f| %>
    <p>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </p>

    <p>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </p>

    <p>
      <%= f.submit "Post", class: 'post-custom-btn btn' %>
    </p>
  <% end %>
</section>