<section class="followings-container">
<section class="followings-card-container">

<% @accounts.each do |account| %>
<div class='following-card'>
<div class="card-panel grey lighten-5 z-depth-1">
  <div class="row valign-wrapper">
    <div class="col s2">
      <%if account.avatar.present? %>
        <%= image_tag(account.avatar, class: 'circle responsive-img')%>
      <%end%>
    </div>
    <div class="col s10">
      <span class="black-text">
        <%= link_to account.username, profile_path(account.username) %><br>
        <%= account.bio %>
      </span><br>
      <div class="card-action">
        <% if current_account.following?(account) %>
          <%= link_to "Unfollow", unfollow_account_path(account), method: :delete %>
        <% else %>
          <%= link_to "Follow", follow_account_path(account) ,method: :post %>
        <% end %>
      </div>
    </div>
    
  </div>
</div>
</div>

<% end %>

</section>
</section>